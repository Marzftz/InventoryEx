      <p class="subtitle">Realice la gestión de los productos que se encuentran registrados en el inventario</p>
    </div>
    <!--FIN Titulo y descripción de la pantalla -->
    <div class="container-fluid content">
      <button type="button" class="btn btn-outline-secondary" data-toggle="modal" data-target="#agregarproducto">Agregar
        nuevo producto</button>
    </div>
    <!-- Modal -->
    <form action="createproduct" method="POST">
      <div class="modal fade" id="agregarproducto" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Agregar nuevo producto</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body modal-contenido">
              <div class="form-group row">
                <label for="inputPassword" class="col-sm-5 col-form-label">Código producto</label>
                <div class="col-sm-7">
                  <input name="codproducto" type="text" class="form-control" id="inputCodigo"
                    placeholder="Ingrese código producto">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputPassword" class="col-sm-5 col-form-label">Nombre producto</label>
                <div class="col-sm-7">
                  <input name="nomproducto" type="text" class="form-control" id="inputNombre"
                    placeholder="Ingrese nombre producto">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputPassword" class="col-sm-5 col-form-label">Cantidad</label>
                <div class="col-sm-7">
                  <input name="cantidad" type="text" class="form-control" id="inputCantidad"
                    placeholder="Cantidad del producto">
                </div>
              </div>
              <div class="form-group row">
                <label for="inputPassword" class="col-sm-5 col-form-label">Costo unitario</label>
                <div class="col-sm-7">
                  <input name="costoun" type="text" class="form-control" id="inputUnitario"
                    placeholder="Costo unitario del producto">
                </div>
              </div>
              <div id="alerta" class="form-group contenedor alerta_novisble {{alerta}}">
                <div id="textalerta" class="alert alert-warning" role="alert">
                  {{textalerta}}
                </div>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-pos="L">
                <span><svg class="bi bi-arrow-counterclockwise" width="1em" height="1em" viewBox="0 0 16 16"
