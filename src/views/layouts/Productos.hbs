    <!--Inicio Tabla de productos -->
    <div class="tables content">
      <table class="table table-sm">
        <thead>
          <tr>
            <th scope="col">Código producto</th>
            <th scope="col">Nombre producto</th>
            <th scope="col">Total almacenado</th>
            <th scope="col">Costo unitario</th>
            <th scope="col">Acción</th>
          </tr>
        </thead>
        <tbody>
          {{#each productos}}
          <tr>
            <th scope="row">{{InvCodigo_Producto}}</th>
            <td id="nombre{{InvCodigo_Producto}}">{{InvNombre_Producto}}</td>
            <td id="cant{{InvCodigo_Producto}}">{{InvCantidad}}</td>
            <td id="pre{{InvCodigo_Producto}}">{{InvPrecio_Unitario}}</td>
            <td><a style="cursor:pointer" data-toggle="modal" onclick="addcantProduct({{InvCodigo_Producto}})"><svg
